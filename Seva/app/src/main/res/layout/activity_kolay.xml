<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/son"
    tools:context=".Kolay"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="526dp"
        android:layout_marginTop="80dp"
        android:padding="10dp">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/boton00"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="0"></ImageButton>

            <ImageButton
                android:id="@+id/boton01"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="1"></ImageButton>



        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/boton02"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="0"></ImageButton>

            <ImageButton
                android:id="@+id/boton03"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="1"></ImageButton>

        </TableRow>




        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="58dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/botonJuegoReiniciar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="yenile"></Button>

            <Button
                android:id="@+id/botonJuegoSalir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="çıkış"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="63dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/timeText"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="#AFBED7"
                android:gravity="center_horizontal"
                android:text="Süre: "
                android:textColor="#1F0C3A"
                android:fontFamily="@font/yeseva_one"
                android:textSize="25dp"
                android:textStyle="bold|italic"></TextView>

            <TextView
                android:id="@+id/texto_puntuacion"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/yeseva_one"
                android:background="#AFBED7"
                android:text="oyuncu1:: "
                android:textColor="#1F0C3A"
                android:textSize="25sp"
                android:textStyle="bold|italic"></TextView>

            <ImageView
                android:id="@+id/btncal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClick="calCliked"
                app:srcCompat="@drawable/baslat"
                tools:layout_editor_absoluteX="292dp"
                tools:layout_editor_absoluteY="16dp" />

            <ImageView
                android:id="@+id/btndurdur"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClick="durdurClickes"
                app:srcCompat="@drawable/durdur"
                tools:layout_editor_absoluteX="292dp"
                tools:layout_editor_absoluteY="16dp" />


        </LinearLayout>

    </TableLayout>

</LinearLayout>
